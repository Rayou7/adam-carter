                            {'icon': 'network-wired', 'name': 'Réseaux', 'color': 'indigo'},
                            {'icon': 'shield-alt', 'name': 'Cybersécurité', 'color': 'blue'},
                            {'icon': 'code', 'name': 'PHP/Symfony', 'color': 'indigo'},
                            {'icon': 'globe', 'name': 'Python', 'color': 'blue'},
                            {'icon': 'terminal', 'name': 'Bash', 'color': 'indigo'}
                        ] %}
