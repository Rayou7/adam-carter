    </div>

    <script>
        // Script pour l'animation du slider de compétences
        document.addEventListener('DOMContentLoaded', function() {
            const trackRef = document.getElementById('skills-slider');

            function animate() {
                if (trackRef) {
                    if (trackRef.scrollLeft >= trackRef.scrollWidth / 2) {
                        trackRef.scrollLeft = 0;
                    } else {
                        trackRef.scrollLeft += 1;
                    }
                }
                requestAnimationFrame(animate);
            }

            const animation = requestAnimationFrame(animate);

            // Nettoyage de l'animation lors du déchargement de la page
            window.addEventListener('beforeunload', function() {
                cancelAnimationFrame(animation);
            });
        });
    </script>
