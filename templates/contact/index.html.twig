{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="space-y-20">
        {# Hero Section #}
        <section class="py-12 px-4">
            <div class="container mx-auto max-w-4xl">
                <div class="text-center mb-8">
                    <div class="inline-block p-4 rounded-full bg-blue-100 mb-6 w-[180px] h-[180px]">
                        <img src="/medias/IMG_8326.png" class="w-full h-full object-cover rounded-full">
                    </div>
                    <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">Me contacter</h1>
                    <h2 class="text-2xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 mb-6">
                        Disponible pour des opportunités
                    </h2>
                </div>

                {# Contact Grid + Map #}
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    {# Contact Info Cards #}
                    <div class="space-y-6">
                        <!-- Carte Email -->
                        <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition duration-300 border-l-4 border-blue-400">
                            <div class="flex items-start gap-4">
                                <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-envelope text-blue-600 text-xl"></i>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-800 mb-1">Email</h3>
                                    <a href="mailto:carter.adam.0701@gmail.com"
                                       class="text-blue-600 hover:text-blue-800 transition break-all">
                                        carter.adam.0701@gmail.com
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Carte Téléphone -->
                        <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition duration-300 border-l-4 border-indigo-400">
                            <div class="flex items-start gap-4">
                                <div class="flex-shrink-0 w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-mobile-alt text-indigo-600 text-xl"></i>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-800 mb-1">Téléphone</h3>
                                    <a href="tel:+33612345678"
                                       class="text-indigo-600 hover:text-indigo-800 transition">
                                        +33 7 68 75 57 37
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Carte Localisation -->
                        <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition duration-300 border-l-4 border-blue-400">
                            <div class="flex items-start gap-4">
                                <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-map-marker-alt text-blue-600 text-xl"></i>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-800 mb-1">Localisation</h3>
                                    <p class="text-gray-600">Paris 12ème, Île-de-France</p>
                                    <p class="text-gray-500 text-sm mt-1">Disponible pour des rencontres sur place</p>
                                </div>
                            </div>
                        </div>

                        <!-- Bouton Téléchargement CV -->
                        <div class="pt-4 text-center">
                            <a href="/medias/carter-adam-CV_fr.pdf" download
                               class="inline-block bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-medium py-3 px-6 rounded-lg transition duration-300 flex items-center gap-2 shadow-md hover:shadow-lg mx-auto">
                                <i class="fas fa-download"></i>
                                Télécharger mon CV
                            </a>
                        </div>
                    </div>

                    {# Carte Paris 12 #}
                    <div class="bg-white rounded-xl shadow-md overflow-hidden h-full min-h-[300px]">
                        <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2626.225777029274!2d2.3835342!3d48.8336691!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e6723f862bd209%3A0x97f5211d39909f08!2sCour%20Saint-%C3%89milion!5e0!3m2!1sfr!2sfr!4v1718812345678"
                                width="100%"
                                height="100%"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"
                                class="rounded-xl">
                        </iframe>
                    </div>
                </div>
            </div>
        </section>

        {# Social Media Section #}
        <section class="py-16 rounded-xl bg-gradient-to-br from-blue-50 to-indigo-50 shadow-inner">
            <div class="container mx-auto px-4 max-w-2xl">
                <div class="text-center mb-12">
                    <h2 class="text-3xl font-bold text-gray-800 mb-3">Mes réseaux</h2>
                    <p class="text-gray-600">Connectez-vous avec moi sur les plateformes professionnelles</p>
                </div>

                <div class="flex flex-wrap justify-center gap-6">
                    {% for social in [
                        {'icon': 'linkedin', 'name': 'LinkedIn', 'color': 'blue', 'url': 'https://www.linkedin.com/in/carter-adam-13312b2a3/'},
                        {'icon': 'github', 'name': 'GitHub', 'color': 'indigo', 'url': 'https://github.com/carterada'},

                    ] %}
                        <a href="{{ social.url }}"
                           target="_blank"
                           class="w-24 h-24 bg-white rounded-xl shadow-md hover:shadow-lg transition-all duration-300 hover:-translate-y-1 flex flex-col items-center justify-center p-4">
                            <div class="w-12 h-12 bg-{{ social.color }}-50 rounded-full flex items-center justify-center mb-2 shadow-inner">
                                <i class="fab fa-{{ social.icon }} text-{{ social.color }}-600 text-xl"></i>
                            </div>
                            <span class="text-sm font-medium text-gray-700">{{ social.name }}</span>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </section>
    </div>
{% endblock %}